#include <stdio.h>
#include<string.h>
 
int input_type (char *first){
    if (strcmp(first, "setid")==0)
        return 0;
    if (strcmp(first, "connect")==0)
        return 1;
    if (strcmp(first, "send")==0)
        return 2;
    if (strcmp(first, "route")==0)
        return 4;
    if (strcmp(first, "peers")==0)
        return 8;
    return -1;
}


int main()
{
    char input[] ="send,1234,5678,910";
    char *split[4];
    
    
    //split the input
    int i = 0;
    char *p = strtok (input, ",");
    
    while (p != NULL)
    {
        split[i++] = p;
        p = strtok (NULL, ",");
    }


    //choose function
    int type = input_type(split[0]);
    
    switch (type){
        case (0):
            setid(split[1],split[2]);
            break;
        case (1):
            connect(split[1]);
            break;
        case (2):
            send(split[1],split[2],split[3]);
            break;
        case (4):
            route(split[1]);
            break;
        case (8):
            peers();
            break;
    }
    
    return 0;
}
